---
import { Image } from 'astro:assets'
import Button from './Button.astro'

interface Props {
    title: string
    budget: string
    duration: string
    slug: string
    image: ImageMetadata
}
const { title, budget, duration, slug, image } = Astro.props
---

<section
    class="container mx-auto p-4 mb-32 grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-16"
>
    <div class="col-span-1">
        <Image src={image} alt="Placeholder" />
    </div>
    <div class="col-span-1 flex flex-col gap-4">
        <h2 class="text-md md:text-md">
            {title}
        </h2>
        <slot />
        <Button
            classes={['md:block', 'hidden']}
            link={slug}
            text={`So machen wir ${title}`}
        />
        <Button
            classes={['md:hidden', 'block']}
            link={slug}
            text={`${title}`}
        />
    </div>
    <div class="col-span-1 md:flex hidden items-center">
        <div class="flex-grow h-px bg-primary-500 mr-4"></div>
        <p class="text-xs justify-self-end text-end">Anhaltspunkte</p>
    </div>
    <div class="col-span-1">
        <p class="text-xs justify-self-end text-start">
            {`Durchschnittliches Projektbudget: ${budget}`}
            <p>
                <p class="text-xs justify-self-end text-start">
                    {`Durchschnittliche Projektdauer: ${duration}`}
                </p>
            </p>
        </p>
    </div>
</section>
